{
  "name": "Progress Capture",
  "version": "1.0",
  "description": "Captures a screenshot on page load",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [
        "content_script.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Take a screen shot!"
  },
  "permissions": [
    "activeTab",
    "webNavigation",
    "downloads",
    "*://*/*",
    "<all_urls>"
  ],
  "manifest_version": 2
}